<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignatureActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSignImage"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <ImageView
            android:id="@+id/img_sign"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_edit_text_background_light"/>

        <TextView
            android:id="@+id/lblEmptySign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Signature yet."
            app:layout_constraintStart_toStartOf="@+id/img_sign"
            app:layout_constraintEnd_toEndOf="@+id/img_sign"
            app:layout_constraintBottom_toBottomOf="@+id/img_sign"
            app:layout_constraintTop_toTopOf="@+id/img_sign"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnAddSignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tenant_detail_activity_btn_add_signature"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/layoutSignImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</LinearLayout>