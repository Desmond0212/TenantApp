<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MessageTopbarFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/unitCardViewContainer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblUnitTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-13-14"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/lblUnitAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblUnitTitle"
                android:text="Pelangi Indah Condo Batu 4 1/2 Jalan Ipoh"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/imgUnitIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/undraw_at_home_octe"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>