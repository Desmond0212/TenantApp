<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillDetailsActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/round_head"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutConstraintContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBackBillDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_left_white_36"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/lblDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing Details"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imgMoreOptionBillDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_vert_white_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lblDashboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBillingTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/lblDashboard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/lblBillNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BILL0023"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:id="@+id/lblUsernameBillDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vinny Chong"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/lblBillNumber"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:id="@+id/lblBillDetailStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="15dp"/>

                        <LinearLayout
                            android:id="@+id/layoutDateContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/lblBillNumber"
                            app:layout_constraintStart_toStartOf="parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/lblBillDetailDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bill Date"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="20dp"/>

                                <TextView
                                    android:id="@+id/lblBillDetailDateValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="June 15, 2020"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlack"
                                    android:layout_marginStart="15dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/lblBillDetailDueDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Due Date"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="20dp"/>

                                <TextView
                                    android:id="@+id/lblBillDetailDueDateValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="June 21, 2020"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlack"
                                    android:layout_marginStart="15dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/lblRentalAmountTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rental Amount"
                            app:layout_constraintTop_toBottomOf="@+id/layoutDateContainer"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="15dp"/>

                        <TextView
                            android:id="@+id/lblRentalAmountValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 1,200.00"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lblRentalAmountTitle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="20dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewBillingTop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/lblReceiptNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="RECEIPT - REC0001"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"/>

                        <ImageView
                            android:id="@+id/imgDownload"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_download2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="20dp"/>

                        <TextView
                            android:id="@+id/lblPaymentDateBillDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/lblReceiptNumber"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Payment Date"
                            android:textStyle="bold"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:id="@+id/lblPaymentDateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="June 15, 2020"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/lblPaymentDateBillDetail"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="15dp"/>

                        <ImageView
                            android:id="@+id/imgReceipt"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:src="@drawable/img_receipt"
                            app:layout_constraintTop_toBottomOf="@+id/lblPaymentDateValue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="20dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>